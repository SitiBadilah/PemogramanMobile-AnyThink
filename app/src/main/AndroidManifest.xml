<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.todolist">

    <application
        android:name="com.example.todolist.TodoApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img"
        android:label="AnyThink"
        android:roundIcon="@drawable/img"
        android:supportsRtl="true"
        android:theme="@style/Theme.TodoListTutorial"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.todolist.MainActivity"
            android:exported="true"/>
        <activity
            android:name=".login.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity1"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity2"
            android:exported="false" />
    </application>

</manifest>